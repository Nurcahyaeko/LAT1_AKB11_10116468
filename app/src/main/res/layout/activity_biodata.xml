<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitetree"
    android:orientation="vertical"
    tools:context=".MainActivity"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="24dp"
        android:layout_weight="0.1">


        <TextView
            android:id="@+id/namaPanggilan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:text="Nama Panggilan Kamu"
            android:textColor="@color/Hitam"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/inputNamaPanggilan"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/namaPanggilan"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubik_regular"
            android:inputType="text"
            android:hint="Contoh : Budi"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/umurKamu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:layout_below="@+id/inputNamaPanggilan"
            android:text="Umur Kamu"
            android:textColor="@color/Hitam"
            android:textSize="24sp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/inputUmur"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/umurKamu"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubik_regular"
            android:inputType="text"
            android:hint="Contoh : 12"
            android:textSize="16sp"
            android:textStyle="bold"
            />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"

        android:gravity="center">

        <Button
            android:id="@+id/btnSelanjutnya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/belumpunya"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonround1"
            android:fontFamily="@font/nunito_bold"
            android:text="Selanjutnya"
            android:textAllCaps="false"
            android:textColor="@color/Hitam"
            android:textSize="18sp"
            android:textStyle="bold"


            />

    </RelativeLayout>


</LinearLayout>

